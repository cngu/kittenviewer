<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KittenPhotoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarThemeOverlay"
        app:popupTheme="@style/ToolbarPopupThemeOverlay"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/width_edittext"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/default_width"
                android:hint="@string/width"
                android:maxLength="4"
                android:inputType="number"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:nextFocusRight="@+id/height_edittext"
                android:nextFocusForward="@id/height_edittext"/>

            <EditText
                android:id="@id/height_edittext"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/width_edittext"
                android:layout_toEndOf="@id/width_edittext"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:text="@string/default_height"
                android:hint="@string/height"
                android:maxLength="4"
                android:inputType="number"
                android:imeOptions="actionDone|flagNoExtractUi"/>

            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="@string/abc_search_hint"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/photo_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/kitten_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"/>

    </RelativeLayout>


</LinearLayout>
